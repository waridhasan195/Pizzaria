@page
@model Pizzaria.Pages.OrderModel
@{
}

<h3>Orders</h3>
<br />

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Pizza Name</th>
            <th>Price $</th>
        </tr>
    </thead>
    <tbody>
        
        @foreach(var order in Model.orders)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.PizzaName</td>
                <td>@order.BasePrice</td>
            </tr>
        }
        
    </tbody>
</table>