
@page
@model Pizzaria.Pages.Forms.CustomPizzaModel
@{
}




<div class="text-center container">
    <h1 class="display-4 text-capitalize mainTitle">Create Your own Pizza</h1>
    <p>We trust you to make the best pizza for you</p>
    <form method="post" class="mx-auto mt-5 mb-5 px-5 pt-5 pb-5 rounded-5 alert-light col-4">
        <input type="text" asp-for="Pizza.PizzaName" placeholder="Pizza Name...."/><br />
        <input class="form-check-input" asp-for="Pizza.TomatoSouce" type="checkbox" value="" id="flexCheckDefault" placeholder="Tomato Sauce">Tomato Sauce<br />
        <input class="form-check-input" asp-for="Pizza.Cheese" type="checkbox" value="" id="flexCheckDefault" placeholder="Cheese">Cheese<br />
        <input class="form-check-input" asp-for="Pizza.Mushroom" type="checkbox" value="" id="flexCheckDefault" placeholder="Mushroom">Mushroom<br />
        <input class="form-check-input" asp-for="Pizza.Peperoni" type="checkbox" value="" id="flexCheckDefault" placeholder="Peperoni">Peperoni<br />
        <input class="form-check-input" asp-for="Pizza.Tuna" type="checkbox" value="" id="flexCheckDefault" placeholder="Tuna">Tuna<br />
        <input class="form-check-input" asp-for="Pizza.PineApple" type="checkbox" value="" id="flexCheckDefault"  placeholder="PineApple">PineApple<br />
        <input class="form-check-input" asp-for="Pizza.Ham" type="checkbox" value="" id="flexCheckDefault" placeholder="Ham">Ham<br />
        <input class="form-check-input" asp-for="Pizza.Beef" type="checkbox" value="" id="flexCheckDefault" placeholder="Beef">Beef<br />

        <button class="btn btn-primary mt-1" type="submit">Order My Pizza</button>
        
    </form>

</div>

